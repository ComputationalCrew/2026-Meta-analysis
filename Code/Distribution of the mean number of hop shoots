### Figure 1. Distribution of the mean number of hop shoots 

library(multcomp)
library(lme4)
library(dplyr)
library(ggplot2)
library(emmeans)
library(tidyr)
library(readr)
library(pivottabler)
library(stats)
library(metafor)
library(writexl)


# Create the data frame_Oregon
Meta_downy <- read.csv("…/DM_GitHub_OR.csv", check.names=FALSE)

# Create the data frame_Washington
Meta_downy <- read.csv("…/DM_GitHub_WA.csv", check.names=FALSE)

# Create the data frame_Total
Meta_downy <- read.csv("…/DM_GitHub_Total.csv", check.names=FALSE)


# Figure 1

png("Spikes_OR(WA or Total).png",width=12,height=8,units="cm" , res = 1000)
ggplot(Meta_downy, aes(x = Spikes, fill = Treat)) +
  geom_histogram(alpha = 0.5, position = "identity") +
  labs(x = "Spikes per plant", y = "Frequency") +
  theme_classic() + labs(fill = "MOA")
dev.off()

png("Response_OR(WA or Total).png",width=12,height=8,units="cm" , res = 1000)
ggplot(Meta_downy, aes(x = tResponse_ratio, fill = Treat)) +
  geom_histogram(alpha = 0.5, position = "identity") +
  labs(x = "Response ratio", y = "Frequency") +
  theme_classic() + labs(fill = "MOA")
dev.off()
